<div id="login_form">
<h1>Login</h1> <br>
    <%= form_tag '/login' do%>
        <%= text_field_tag :username, nil, placeholder: 'Username' %><br>
        <%= password_field_tag :password, nil, placeholder: 'Password'%> <br>
        <%= submit_tag 'Login' %>
    <% end %>
</div>

<%= link_to "Signup", signup_path %>
<%= render 'form' %>