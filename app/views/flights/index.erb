<% @flights.each do |flight| %>
    <div><%= flight.title %> - <%= flight.departure %> - <%= flight.arrival %></div> <br>

    <div>
    <table>
        <th>Ticket Number</th> <th>Price</th> <th>Seat</th> <th>Purchased</th>
        <% flight.tickets.each do |ticket| %>
        <tr>
            <td><%= ticket.ticket_num %></td>
            <td> <%= ticket.price %></td>
            <td><%= ticket.seat_num %></td>
            <td>  
                <% if ticket.passenger.nil? %>
                    <%= link_to 'Buy ticket', buy_ticket_path(ticket) %>
                <% else %>
                    purchased
                <% end %>
            </td>
        </tr>
        <% end %>
    </table>
     <%= link_to 'Create ticket', new_flight_ticket_path(flight) %> <br>
        <% if !flight.tickets[1].nil? %>
            <%= link_to 'Cheapest ticket', cheapest_flight_path(flight) %> <br>
            <%= link_to 'Expensive ticket', expensive_flight_path(flight) %> <br>
        <% end %>
</div>
<% end %>
        <%= link_to 'Show all tickets', airline_flights_path %>
        <%= link_to 'back to airlines', airlines_path %> <br>
