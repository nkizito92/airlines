<% if !@passengers.empty? %>
    <% @passengers.each do |passenger| %>
        <% if !passenger.tickets.empty? %>
        <h1> <%= passenger.full_name %> has <%= pluralize(passenger.tickets.size,'Ticket') %>:</h1> <br><br>
            <% passenger.tickets.each do |tic| %>
               <div>
                <h2><%= tic.flight.title %></h2> <br>
                    <%= tic.ticket_num %>
                    <%= tic.price %>
                    <%= tic.seat_num %>
               </div> <br><br>
            <% end %>
        <%else %>
            <h2> <%= passenger.full_name %> has no Plane tickets:</h2>
        <% end %>
            <%= link_to "Edit Passenger", edit_passenger_path(passenger) %>

    <% end %>

<% else %>
    <h2>You Have No Passengers</h2> <br><br>
     <%= link_to "Create Passenger", new_passenger_path %>
<% end %>

<%= link_to "View Airlines", root_path %>
